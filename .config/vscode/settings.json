{
  // always open files in a new tab
  "workbench.editor.enablePreview": false,

  // vim
  // re-map keys to navigate through splits
  "vim.normalModeKeyBindings": [
    {
      "before": ["<C-H>"],
      "after": ["<C-W>", "<C-H>"]
    },
    {
      "before": ["<C-J>"],
      "after": ["<C-W>", "<C-J>"]
    },
    {
      "before": ["<C-K>"],
      "after": ["<C-W>", "<C-K>"]
    },
    {
      "before": ["<C-L>"],
      "after": ["<C-W>", "<C-L>"]
    }
  ]
}
