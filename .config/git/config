[include]
	path = ./profile

[pull]
	ff = only

# set up the diff tool (git delta)
[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only
[add.interactive]
    useBuiltin = false
[delta]
    navigate = true    # use n and N to move between diff sections
	line-numbers = true
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default
